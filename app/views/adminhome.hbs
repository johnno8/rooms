{{> menu }}

<section class="ui raised segment">
  <div class="ui grid">
    <div class="ui four wide column">
      <img src="images/nf1.jpg" class="ui centered medium image">
    </div>
    <div class="ui eight wide column">
      <div class="ui basic padded segment">
        <h2 class="ui blue header">{{ displayDate date }}</h2>
      </div>
    </div>
  </div>

  <section class="ui segment">
    <div class="ui two column grid">

      <div class="column">
        <h4>Rooms</h4>
        <form class="ui fluid form segment roomdetails" action="/roomdetails" method="POST">
          <div class="field">
            <div class="ui fluid selection dropdown roomdetails">
              <input type="hidden" name="id">
              <i class="dropdown icon"></i>
              <div class="default text">Select a Room</div>
              <div class="menu">
                {{#each rooms}}
                <div class="item" data-value="{{this.id}}">
                  {{this.name}}
                </div>
                {{/each}}
              </div>
            </div>
          </div>
          <div class="form actions">
            <button class="ui fluid blue submit button">Edit room details</button>
            <div class="ui error message"></div>
          </div>
        </form>

        <form class="ui fluid form segment createroom" action="/createroom" method="POST">
          <div class="field">
            <label>Room Number (displayed on room door)</label>
            <input type="text" name="id">
          </div>
          <div class="two fields">
            <div class="field">
              <label>Room Name</label>
              <input type="text" name="name">
            </div>
            <div class="field">
              <label>Capacity</label>
              <input type="text" name="capacity">
            </div>
          </div>
          <div class="form actions">
            <button class="ui fluid blue submit button">Create new room</button>
          </div>
        </form>
        {{> successmsg }}
        {{> formerror }}
      </div>

      <div class="column">
        <h4>Admin Users</h4>
        <div class="ui fluid form segment">
          <a href=""><button class="ui fluid blue button">Edit Admin Users</button></a>
        </div>
      </div>
    </div>

  </section>
</section>

<script>$('.ui.selection.dropdown.roomdetails').dropdown('clear')</script>